{
  "name": "md2html",
  "version": "2.0.0",
  "description": "一个功能强大的 Markdown 转 HTML 转换器，支持自定义主题、动态特效、自动目录生成和响应式设计",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "convert": "npx ts-node src/md2html-enhanced.ts",
    "convert-basic": "npx ts-node src/md2html-new.ts",
    "batch": "npx ts-node src/batch-convert.ts",
    "demo": "npm start",
    "build": "./scripts/build.sh",
    "test": "echo '✅ 运行测试'",
    "type-check": "npx tsc --noEmit",
    "clean": "rm -rf output/ *.html test-*/",
    "release": "./scripts/release.sh"
  },
  "bin": {
    "md2html": "./src/md2html-enhanced.ts",
    "md2html-basic": "./src/md2html-new.ts",
    "md2html-batch": "./src/batch-convert.ts"
  },
  "keywords": [
    "markdown",
    "html",
    "converter",
    "theme",
    "effects",
    "responsive",
    "toc",
    "批量转换",
    "主题",
    "特效"
  ],
  "author": "md2html-team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "highlight.js": "^11.7.0",
    "marked": "^4.2.12",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/md2html-converter.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/md2html-converter/issues"
  },
  "homepage": "https://github.com/your-username/md2html-converter#readme"
}
